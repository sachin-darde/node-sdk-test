{
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "plugin:security/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:promise/recommended",
      "plugin:json/recommended",
      "plugin:node/recommended"
    ],
    "plugins": [
      "import",
      "security",
      "filenames-simple"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "quotes": [
        "warn",
        "single"
      ],
      "semi": "error",
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-multiple-empty-lines": [
        2,
        {
          "max": 1
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "indent": [
        "error",
        2
      ],
      "no-param-reassign": "warn",
      "camelcase": [
        "error",
        {
          "properties": "always"
        }
      ],
      "node/no-unpublished-require": [
        "error", 
        {
          "allowModules": ["chai", "sinon", "supertest"]
        }
      ],
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": false
          },
          "newlines-between": "always-and-inside-groups"
        }
      ],
      "max-lines": [
        "error",
        {
          "max": 150,
          "skipComments": true,
          "skipBlankLines": true
        }
      ],
      "max-len": [
        "error",
        {
          "code": 150,
          "ignoreComments": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "filenames-simple/naming-convention": [
        "error",
        {
          "rule": "kebab-case"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.js"
        ]
      }
    ]
  }
  